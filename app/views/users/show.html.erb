<% provide(:title , @user_show.name) %> 
<div class="row">
	<div class="row">
		<aside class="span4">
			<section>	
				<h1> 
					<%= gravatar_for @user_show %>
					<%= @user_show.name %> 
				</h1>
			</section> 
		</aside>
		<% if allow_manage?(@user_show) %>
		<div class="span8">
			<section class="col-md-12 text-right">
				<%= link_to "Manage Account", edit_user_registration_path , class: "btn btn-default" %>
			</section> 
		</div>
		<% end %> 
	</div>
	<div class="row">
		<% if allow_manage?(@user_show) %>
		<aside class="span4">
			<section>	
				<%= render 'shared/micropost_form' %>
			</section> 
		</aside>		
		<% end %> 
		<div class="span8">
			<% if @user_show.microposts.any? %> 
				<h3>Micropost (<%= @user_show.microposts.count %>)</h3>
				<ol class="microposts">
					<%= render @microposts %> 
				</ol>
				<%= will_paginate @microposts %> 
			<% end %> 
		</div>
	</div>
</div>
