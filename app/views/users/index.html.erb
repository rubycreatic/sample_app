<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= will_paginate %> 
	<ul class="users">
	  <% @users.each do |user| %>
	   <% if current_user != user %>
	    <li>
		    	<div class="col-md-8">
		    		<div class="col-md-3">
		      			<%= gravatar_for user, size: 52 %>
		      		</div>
		      		<div class="col-md-5 col-md-offset-3">
		      			<%= link_to user.name, user , class: "lead"%>
		      		</div>
		      	</div>
	    </li>
	   <% end %> 
	  <% end %>
	</ul>
<%= will_paginate %> 